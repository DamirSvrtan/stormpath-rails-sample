<h1>Create Account</h1>

<%= form_tag users_path :html => { :class => "form-horizontal" } do |f| %>
  <div class="control-group">
    <%= label_tag :given_name, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :given_name %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :surname, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :surname %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :email, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :username, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :username %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
